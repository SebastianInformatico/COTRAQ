# S.C.O.T.A. Backend Configuration

# Servidor
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scota_development
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Autenticaci√≥n JWT
JWT_SECRET=scota_super_secret_key_2024_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=scota_refresh_secret_key_2024_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Upload de archivos
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email (para notificaciones futuras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cotraq.com

# Timezone
TZ=America/Santiago

# Logs
LOG_LEVEL=info
LOG_FILE=logs/scota.log

# Backup
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30